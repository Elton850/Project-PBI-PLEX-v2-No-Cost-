<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <link rel="stylesheet" href="/public/styles.css"/>
  <title>Nova senha</title>
</head>
<body class="center">
  <div class="card" style="width:420px;">
    <div style="font-weight:800;">Definir nova senha</div>
    <div class="muted" style="margin-bottom:10px;">Token expira em 15 minutos</div>

    <% if (error) { %>
      <div class="error" style="margin-bottom:10px;"><%= error %></div>
    <% } %>

    <form method="post" action="/reset-password" style="display:flex; flex-direction:column; gap:10px;">
      <input type="hidden" name="token" value="<%= token %>" />

      <div>
        <label>Nova senha</label>
        <input name="password" type="password" required />
      </div>

      <div>
        <label>Confirmar senha</label>
        <input name="confirm" type="password" required />
      </div>

      <button class="btn-primary" type="submit">Salvar</button>

      <div style="text-align:center; margin-top:6px;">
        <a class="chip" href="/login">Voltar</a>
      </div>
    </form>
  </div>
</body>
</html>